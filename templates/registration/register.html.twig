{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
 {% block style %}
   <style>
   .email-ms{
       margin-top: 10px;
       margin-bottom:10px;
   }
   .email{
      box-shadow: 6px 5px 5px  blue;
      padding-top: 50px;
  
   }
   </style>

 {% endblock %}
{% block body %}
 
<div class="body-content">
	<div class="container">
		<div class="sign-in-page">
			<div class="row">
                            <div class="col-md-3"></div>
                            <div class="col-md-6 col-sm-6 create-new-account email">
                                <h4 class="checkout-subtitle">Créer un nouveau compte.</h4>
                                <p class="text title-tag-line text-center text-primary">Enregistrer</p>
                                {% for flashError in app.flashes('verify_email_error') %}
                                    <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                                {% endfor %}

                                {{ form_start(registrationForm) }}
                                <div class="form-group">
                                    {{ form_row(registrationForm.email) }}
                                </div>
                                <div class="form-group">
                                    {{ form_row(registrationForm.lastname) }}
                                </div>
                                <div class="form-group">
                                    {{ form_row(registrationForm.firstname) }}
                                </div>
                                <div class="form-group">
                                        {{ form_row(registrationForm.plainPassword, {
                                        label: 'Password'
                                    }) }}
                                </div>
                                <div class="form-group">
                                        {{ form_row(registrationForm.agreeTerms) }}
                                </div>
                                    <div class="form-group">
                                        <p> <a> Conditions génerales d'utilisation</a> </p>
                                </div>
                                <div class="form-group">
                                        <button type="submit" class="btn btn-primary btn-block">S'inscrire</button>
                                </div>
                                 <div class="form-group">
                                        <a class="btn btn-light btn-block" href="{{path('app_login')}}">Se connecter</a>
                                </div>
                                
                                {{ form_end(registrationForm) }}
                                <blockquote> <small> années 1960 avec la sortie de feuilles 
                                Letraset contenant des passages de Lorem Ipsum, et plus récemment avec
                                publication assistée par ordinateur comme Aldus
                                PageMaker incluant des versions de Lorem Ipsum. </small> </blockquote>

                            </div>	
                             <div class="col-md-3"></div>
                       </div><!-- /.row -->
                   </div><!-- /.sigin-in-->
		
</div><!-- /.body-content -->
    
{% endblock %}
