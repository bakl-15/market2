{% extends 'base.html.twig' %}

{% block title %}Se connecter!{% endblock %}
   {% block style %}
   <style>
   .email-ms{
       margin-top: 10px;
       margin-bottom:10px;
   }
   .email{
      box-shadow: 6px 5px 5px  blue;
      padding-top: 50px;
  
   }
   </style>

 {% endblock %}
{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous étes connecté {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
     {# ------------------------------------- #}
     <div class="body-content">
	<div class="container">
		<div class="sign-in-page">
			<div class="row">
				<!-- Sign-in -->
                  <div class="col-md-3 col-sm-12">
                  </div>			
                    <div class="col-md-6 col-sm-12 sign-in border-1 email">
                        <h4 class="">Se connecter</h4>
                        <p class="">Bonjour, Bienvenue sur votre compte.</p>
                        <div class="social-sign-in outer-top-xs text-center">
                            <a href="#" class="facebook-sign-in"><i class="fa fa-facebook"></i> Sign In with Facebook</a>
                            <a href="#" class="twitter-sign-in"><i class="fa fa-twitter"></i> Sign In with Twitter</a>
                        </div>	
                        <div class="mt-5 text-center">
                            <h1 class="text-center"> OU </h1>
                            <h1 class="h3 mb-3 font-weight-normal">Se connecter !</h1>
                         </div>
                            <label for="inputEmail">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" placeholder="Entrer ton email" class="form-control" autocomplete="email" required autofocus>
                            <label for="inputPassword">Mot de passe</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                            <input type="hidden" name="_csrf_token"
                                value="{{ csrf_token('authenticate') }}"
                            >

                        
                                {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                See https://symfony.com/doc/current/security/remember_me.html #}
                              <div class="row">
                                <div class="checkbox mb-3 col-md-6">
                                    <label>
                                        <input type="checkbox" name="_remember_me"> Remember me
                                    </label>
                                </div>
                                
                              </div>
                               
                            <button class="btn btn-lg btn-primary btn-block" type="submit">
                                Se connecter
                            </button>
                              
                        </form>
                        
                         <a class="btn btn-lg btn-light btn-block fs-6" href="register">
                               Créer un compte
                         </a>
                          <div class="float-end mt-5">
                              <a href="{{path('app_forgot_password_request')}}" > Mot de passe oublié</a>
                         </div>
                       		  <blockquote><small> années 1960 avec la sortie de feuilles 
                                Letraset contenant des passages de Lorem Ipsum, et plus récemment avec
                                publication assistée par ordinateur comme Aldus
                                PageMaker incluant des versions de Lorem Ipsum. </small></blockquote>	
                    </div>
                    <div class="col-md-3 col-sm-12">
                  </div>
<!-- Sign-in -->


                       </div><!-- /.row -->
                   </div><!-- /.sigin-in-->
		
</div><!-- /.body-content -->

     {# -------------------------------------- #}
    
{% endblock %}
