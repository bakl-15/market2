  <div class="item item-carousel">
                    <div class="products">
                      <div class="product">
                        <div class="product-image">
                        {% for image in product.images %}
                          {% if loop.first %}
                              <div class="image"> <a href="{{ path('product_show', {'id': product.id})}}"><img  src="{{asset('uploads/images/')}}{{ image.url }}" alt="{{ image.caption }}"></a> </div>
                          <!-- /.image -->
                          {% endif %}
                        {% endfor %}  
                         {% for tag in product.tags %}
                         
                           <div class="tag {{tag.name}}"><span>{{tag.name}}</span><br></div>
                          
                        {% endfor %}
                        </div>
                        <!-- /.product-image -->
                        
                        <div class="product-info text-left">
                          <h3 class="name"><a href="detail.html">{{product.name}}</a></h3>
                          <div> 
                              {{ include('partials/rating.html.twig', {rating : product.getAvgRating})}}
                          </div>
                          <div class="description"></div>
                          <div class="product-price"> <span class="price"> {{product.price}} &euro; </span> <span class="price-before-discount">{% if product.coupon %} {{product.oldPrice}} &euro; {% endif %}</span> </div>
                          <!-- /.product-price --> 
                          
                        </div>
                        <!-- /.product-info -->
                        <div class="cart clearfix animate-effect">
                          <div class="action">
                            <ul class="list-unstyled">
                              <li class="add-cart-button btn-group">
                                <button data-toggle="tooltip" class="btn btn-primary icon" type="button" title="Add Cart"> <i class="fa fa-shopping-cart"></i> </button>
                                <button class="btn btn-primary cart-btn" type="button">Ajouter au panier</button>
                              </li>
                              <li class="lnk wishlist"> <a data-toggle="tooltip" class="{{path('favorite_add', {'id' : product.id })}}" href="detail.html" title="Wishlist"> <i class="icon fa fa-heart"></i> </a> </li>
                              <li class="lnk"> <a data-toggle="tooltip" class="add-to-cart" href="{{path('cart_add', {'id' : product.id })}}" title="Compare"> <i class="fa fa-signal" aria-hidden="true"></i> </a> </li>
                            </ul>
                          </div>
                          <!-- /.action --> 
                        </div>
                        <!-- /.cart --> 
                      </div>
                      <!-- /.product --> 
                      
                    </div>
                    <!-- /.products --> 
 </div>
 <!-- /.item -->