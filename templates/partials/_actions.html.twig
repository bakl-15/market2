<div class="row text-center"   style=" width : 80px">
 
    {% if 'show' in action %}
     <div class="col-md-4">
            <a href="{{ path("#{actionPath}show", actionVars) }}">
                <i class="fa fa-eye"></i>
            </a>
       </div>
    {% endif %}
 
  
    {% if 'update' in action %}
      <div class="col-md-4">
        <a href="{{ path("#{actionPath}edit", actionVars) }}">
            <i class="fa fa-edit"></i>
        </a>
     </div>
    {% endif %}
 
   
    {% if 'duplicate' in action  %}
    <div class="col-md-4">
        <a href="{{ path("#{actionPath}duplicate", actionVars) }}">
            <i class="fa fa-copy"></i>
        </a>
      </div>
    {% endif %}
  
    
    {% if 'delete' in action %}
    <div class="text-center col-md-4">
        <form method="post" action="{{ path("#{actionPath}delete", actionVars) }}" onsubmit="return confirm('Etes-vous sûr de vouloir supprimer cet élément ?');">
            <input type="hidden" name="_method" value="DELETE">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ object.id) }}">
            <button class="text-primary" style=" background: transparent; border: none"><i class="fa fa-trash"></i></button>
        </form>
    </div>
    {% endif %}
    
</div>