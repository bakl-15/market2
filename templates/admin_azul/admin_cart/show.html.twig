{% extends 'base.html.twig' %}

{% block title %}Cart{% endblock %}

{% block body %}
    <h1>Cart</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cart.id }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ cart.reference }}</td>
            </tr>
            <tr>
                <th>Fullname</th>
                <td>{{ cart.fullname }}</td>
            </tr>
            <tr>
                <th>CarrierName</th>
                <td>{{ cart.carrierName }}</td>
            </tr>
            <tr>
                <th>CarrierPrice</th>
                <td>{{ cart.carrierPrice }}</td>
            </tr>
            <tr>
                <th>DelevryAddress</th>
                <td>{{ cart.delevryAddress }}</td>
            </tr>
            <tr>
                <th>IsPaid</th>
                <td>{{ cart.isPaid ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>MoreInformation</th>
                <td>{{ cart.moreInformation }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ cart.createdAt ? cart.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ cart.quantity }}</td>
            </tr>
            <tr>
                <th>SubTotalHT</th>
                <td>{{ cart.subTotalHT }}</td>
            </tr>
            <tr>
                <th>Taxe</th>
                <td>{{ cart.taxe }}</td>
            </tr>
            <tr>
                <th>SubTotalTTC</th>
                <td>{{ cart.subTotalTTC }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_azul_admin_cart_index') }}">back to list</a>

    <a href="{{ path('admin_azul_admin_cart_edit', {'id': cart.id}) }}">edit</a>

    {{ include('admin_azul/admin_cart/_delete_form.html.twig') }}
{% endblock %}
