{% extends 'base.html.twig' %}

{% block title %}Carrier{% endblock %}

{% block body %}
    <h1>Carrier</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ carrier.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ carrier.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ carrier.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ carrier.price }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ carrier.createdAt ? carrier.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdateAt</th>
                <td>{{ carrier.updateAt ? carrier.updateAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('carrier_index') }}">back to list</a>

    <a href="{{ path('carrier_edit', {'id': carrier.id}) }}">edit</a>

    {{ include('carrier/_delete_form.html.twig') }}
{% endblock %}
