{% extends 'base.html.twig' %}

{% block title %}Comment{% endblock %}

{% block body %}
    <h1>Comment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ comment.updatedAt ? comment.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ comment.rating }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ comment.content }}</td>
            </tr>
            <tr>
                <th>QualityRating</th>
                <td>{{ comment.qualityRating }}</td>
            </tr>
            <tr>
                <th>PriceRating</th>
                <td>{{ comment.priceRating }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_azul_admin_comment_index') }}">back to list</a>

    <a href="{{ path('admin_azul_admin_comment_edit', {'id': comment.id}) }}">edit</a>

    {{ include('admin_azul/admin_comment/_delete_form.html.twig') }}
{% endblock %}
