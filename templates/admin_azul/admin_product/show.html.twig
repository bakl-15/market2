{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>MoreInformations</th>
                <td>{{ product.moreInformations }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>IsBestSeller</th>
                <td>{{ product.isBestSeller ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsNewArrival</th>
                <td>{{ product.isNewArrival ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsEcolo</th>
                <td>{{ product.isEcolo ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsFeatured</th>
                <td>{{ product.isFeatured ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsSpecialOffer</th>
                <td>{{ product.isSpecialOffer ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_product_index') }}">back to list</a>

    <a href="{{ path('admin_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('admin_product/_delete_form.html.twig') }}
{% endblock %}
