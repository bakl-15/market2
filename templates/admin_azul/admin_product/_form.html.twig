
                   
                  
                      {{ form_start(form) }}
                         <div class="border border-primary p-4 mt-1 mb-2">
                            <div class="row">
                                <div class="col-md-6">
                                     <div class="form-group">
                                    {{ form_row(form.name) }}
                                    </div>
                               
                                </div>
                                 <div class="col-md-6">
                                     <div class="form-group">
                                        {{ form_row(form.price) }}
                                     </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                     <div class="form-group">
                                        {{ form_row(form.description) }}
                                     </div>
                                </div>
                                 <div class="col-md-6">
                                      <div class="form-group">
                                         {{ form_row(form.moreInformations) }}
                                       </div>
                                </div>
                            </div>
                           
                            
                            <div class="form-group">
                                 {{ form_row(form.category) }}
                            </div>
                              
                            <div class="form-group">
                                 {{ form_row(form.tags) }}
                            </div>
                            <div class="form-group">
                                 {{ form_row(form.quantity) }}
                            </div>
                        </div>
                             <div class="form-group border border-primary p-4">
                              <h5> Choisir les parametres de produit</h5>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    {{ form_row(form.isBestSeller) }}
                                                </div>  
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    {{ form_row(form.isNewArrival) }}
                                                </div>   
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    {{ form_row(form.isEcolo) }}
                                                </div> 
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    {{ form_row(form.isFeatured) }}
                                                </div> 
                                            </div>
                                            <div class="col-md-4">
                                                    <div class="form-group">
                                                       {{ form_row(form.isSpecialOffer) }}
                                                    </div> 
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    {{ form_row(form.isNew) }}
                                                </div> 
                                            </div>
                                            
                                        </div>
                                          
                            </div>
                            <div class="border border-primary p-4 mt-2 mb-2" >
                                        <div class="form-group row">
                                            {% if app.request.attributes.get('_route') == 'admin_product_edit'  %}
                                            {% for image in images %}
                                                    <div class="col-md-2">
                                                        <img src="{{ asset('/uploads/images/' ~ image.url) }}" alt="{{ image.caption}}" width="150px">
                                                        <a class="btn btn-danger text-center" href="{{ path('admin_product_delete_image', {'id': image.id})}}" data-delete  data-token="{{ csrf_token('delete' ~ image.id) }}"
                                                        > supprimer </a>
                                                
                                                    </div>
                                                
                                                {% endfor %}
                                        {% endif %}
                                            {{ form_row(form.images) }}
                                            
                                        </div>
                            </div>
                             <div class="form-group">
                                 {{ form_row(form.coupon) }}
                            </div>
                           <div class="form-group mt-1">
                                <button type="submit" class="btn btn-primary btn-block"> <i class="fa fa-user-plus" aria-hidden="true"></i> Valider</button>
                           </div>
                            {{ form_end(form) }}
                          
                          
                          
 