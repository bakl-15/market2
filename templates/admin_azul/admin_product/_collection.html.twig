{% block _product_images_widget %}
    <p>Ici vous pouvez rajouter vos images </p>
    <div class="form-group">
        {{ form_widget(form) }}
    </div>
    <input type="hidden" id="counter" value="0">
    <div class="form-group">
        <button type="button" id="add_image" class="btn btn-primary"> Ajouter une image </button>
    </div>
{% endblock %}

{% block _product_images_entry_row %}
    <div class="form-group">
        {{ form_widget(form) }}
    </div>
{% endblock %}

{% block _product_images_entry_widget %}
    <div class="form-group mt-2" id="block_{{id }}">
        <div class="row">
            <div class="col-md-10">
                <div class="row">
                        
                    <div class="col">
                        {{ form_widget(form.file) }}
                    </div>
                   
                    <div class="col">
                        {{ form_widget(form.caption) }}
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <button type="button" data-action="delete" data-target="#block_{{ id }}" class="btn btn-danger mt-2">X</button>
            </div>
        </div>

    </div>
{% endblock %}