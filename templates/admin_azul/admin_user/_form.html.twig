                      {{ form_start(form) }}
                            <div class="row">
                                <div class="col-md-6">
                                     <div class="form-group">
                                    {{ form_row(form.lastname) }}
                                </div>
                                </div>
                                 <div class="col-md-6">
                                     <div class="form-group">
                                    {{ form_row(form.firstname) }}
                                </div>
                                </div>
                            </div>
                                <div class="form-group">
                                    {{ form_row(form.email) }}
                                </div>
                                
                               
                               
                                  <div class="row">
                                        <div class="col-md-6">
                                        {% if not user.email %}
                                          <div class="form-group">
                                              {{ form_row(form.plainPassword, {
                                                   label: 'Password'
                                            }) }}
                                           </div>
                                           {% else %}
                                           <div class="form-group ">
                                              <p class="alert alert-danger">La modification de mot de passe est déconseillé </p>
                                              {{ form_label (form.plainPassword.first) }}      
                                              {{ form_widget (form.plainPassword.first,{
                                                   label: 'Mot de passe',
                                                   'attr': {
                                                       'disable' : true,
                                                       'value' : 'La modification du mot de passe est déconseillée'
                                                       }
                                            }) }}  
                                               {{ form_errors (form.plainPassword.first) }}    

                                              {{ form_label (form.plainPassword.second) }}   
                                              {{ form_widget (form.plainPassword.second,{
                                                   label: 'Mot de passe',
                                                   'attr': {
                                                       'disable' : true,
                                                        'value' : 'La modification du mot de passe est déconseillée',
                                                    
                                                       }
                                            }) }}
                                              {{ form_errors (form.plainPassword.second) }} 
                                           </div>
                                          {% endif %}  
                                        </div>
                                          <div class="col-md-6 form-group">
                                             {% if user.userRoles|length > 1 %}
                                             
                                                <p class="text-danger mt-4">
                                                    <strong>  L'utilisateur est un  administrateur </strong>
                                                </p>
                                                <div class="form-control mt-2">
                                                      {{ form_label(form.isAdmin) }}
                                                      {{ form_widget(form.isAdmin, {'attr': {'checked' : true }}) }}
                                                      {{ form_errors(form.isAdmin) }}
                                               </div>
                                               
                                             {% else %}
                                                  <div class="form-control mt-2">
                                                    <p> Ajouter le role Administrateur à l'utilisateur</p>
                                                     {{ form_row(form.isAdmin)}}
                                                  </div>
                                                  
                                             {% endif %}
                                            <div class="form-control mt-2"> 
                                                     {{ form_label(form.isVerified) }}
                                                      {{ form_widget(form.isVerified)}}
                                                      {{ form_errors(form.isVerified) }}
                                              
                                            </div>
                                         </div>
                                </div>
                             
                                <div class="form-group">
                                
                                    {% if app.request.attributes.get('_route') == 'admin_user_edit'  %}
                                      <img class="rounded-circle header-profile-user" src="{{asset('uploads/avatars' ~ user.coverImage)}}" alt="Header Avatar">
                                                              
                                    {% endif %}  
                                 {{ form_row(form.image) }}
                                </div>
                   
                                <div class="form-group">.
                                        {{ form_row(form.agreeTerms) }}
                                </div>
                                
                                <div class="form-group">
                                        <button type="submit" class="btn btn-primary btn-block"> <i class="fa fa-user-plus" aria-hidden="true"></i> Valider</button>
                                </div>
                                
                               
                     
                      {{ form_end(form) }}
