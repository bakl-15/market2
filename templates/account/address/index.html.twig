{% extends 'base.html.twig' %}

{% block title %}	Mes commandes {% endblock %}
{% block style %}
    
{% endblock %}
{% block body %}
   <div class="breadcrumb">
	<div class="container">
		<div class="breadcrumb-inner">
			<ul class="list-inline list-unstyled">
				<li><a href="home.html">ACCUEIL</a></li>
				<li class='active'>MES ADRESSES</li>
			</ul>
		</div><!-- /.breadcrumb-inner -->
	</div><!-- /.container -->
</div><!-- /.breadcrumb -->
 
       <div class="body-content outer-top-xs" id="top-banner-and-menu">
           <div class="container">
                <div class="row">
		            <div class="col-xs-12 col-sm-12 col-md-3 sidebar">
                        {% include "./partials/sidebar.html.twig" %}
                    </div>
                       <div class="col-xs-12 col-sm-12 col-md-9">
                        <div class="terms-conditions-page">
                        {% include './partials/flash.html.twig'%}
                          <div class="row">
                              <div class="col-md-12 bg-primary">
                                   <h3> Mes addresses </h3>
                              </div>
                          </div>

                              <hr>
                                <div class="row">
                                 <div class="col-md-8">
                                 </div>
                                  <div class="col-md-4">
                                      <a href="{{path('address_new')}}" class="btn btn-primary float-right"><i class="fas fa-plus-circle"></i> Ajouter une addresse</a>
                                 </div>
                               </div>
                            <hr>
                                 <div class="row">
                        {{ include('partials/flash.html.twig')}}
                           {# ---------------------------------------- #}
                              {% for address in addresses %} 

                                 <div class="col-md-4">
                                 <div class="list-group">
                                    <div href="#" class="list-group-item list-group-item-action active" aria-current="true">
                                        <h5 class="mb-1 text-center"><i class="fas fa-map-marker-alt"></i> {{address.fullname}}</h5>
                                    
                                    </div>
                                    <div href="#" class="list-group-item list-group-item-action" aria-current="true">
                                        <h6 class="text-center"> <i class="fas fa-phone-volume"></i>  {{address.phone}}</g6>
                                    </div>
                                    <a href="#" class="list-group-item list-group-item-action">
                                        <div class="d-flex w-100 justify-content-between">
                                        <h5 class="mb-1 text-center">{{address.address}}</h5>
                                        <p class="text-muted text-center">Complément: {{ address.complement }}</p>
                                        </div>
                                        <p class="text-muted text-center">Code postal : {{ address.zipCode }}</p>
                                         <p class="mb-1 text-center">Ville : {{ address.city }}</p>
                                         <p class="mb-1 text-center">Pays : {{ address.country }}</p>
                                         <p class="mb-1 text-center">Entreprise :{% if address.company %} {{ address.company }} {% else %} Null {% endif %}</p>
                                    </a>
                                    <div  class="list-group-item list-group-item-action text-right">
                                        <a href="{{path('address_edit', {'id' : address.id})}}" class="btn btn-primary"><i class="far fa-edit"></i></a>
                                       
                                        {# -------------------------------- #}
                                        <div class="text-center col-md-4">
                                                <form method="post" action="{{ path('address_delete', {'id' : address.id}) }}" onsubmit="return confirm('Etes-vous sûr de vouloir supprimer cet élément ?');">
                                                    <input type="hidden" name="_method" value="DELETE">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ address.id) }}">
                                                    <button class="btn btn-danger"><i class="far fa-trash-alt"></i></button>
                                                </form>
                                            </div>
                                         

                                         {# -------------------------------- #}
                                 
                                 
                                 
                                    </div>
                                    </div>
                            
                            </div>
                            {% else %}
                            <div> Aucune addresse enregidtrée</div>
                          {% endfor %}
                           {# ----------------------------------------- #}
                        </div> <!-- end row -->
                               <hr>
                          
                            
                           
                        </div>
                    </div>



                          
        </div>
          </div>
          {# ----------------------------------------------------------------------- #}

{% endblock %}

  {% block script %}
       
   {% endblock %}