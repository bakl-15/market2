{{ form_start(form) }}
    <div class="row">
        <div class="col-md-6">
             <div class="form-group">
                 {{ form_row(form.fullname) }}
             </div>
        </div>
        <div class="col-md-6">
              <div class="form-group">
                  {{ form_row(form.company) }}
               </div>
        </div>
    </div>
    
    
     <div class="form-group">
        {{ form_row(form.address) }}
    </div>
     <div class="form-group">
      {{ form_row(form.complement) }}
    </div>
     <div class="form-group">
         {{ form_row(form.zipCode) }}
    </div>
     <div class="row">
        <div class="col-md-6">
             <div class="form-group">
                   {{ form_row(form.city) }}
             </div>
        </div>
        <div class="col-md-6">
              <div class="form-group">
                    {{ form_row(form.country) }}
               </div>
        </div>
    </div>
    
     <div class="form-group">
         {{ form_row(form.phone) }}
    </div>
     <div class="form-group">
        <button class="btn btn-primary btn-block"><i class="fas fa-save"></i> {{ button_label|default('Ajouter l\'adresse') }}</button>
    </div>
      
{{ form_end(form) }}
